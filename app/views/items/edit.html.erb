<h1>Editing<%= @item.name %></h1>

<% if @item.errors.any? %>
  <ul>
    <% @item.errors.full_messages.each do |err| %>
      <li><%= err %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @item do |f| %>
  <%= f.text_field :due_date, :placeholder => "Change Due Date" %>
  <button>Submit</button>
<% end %>