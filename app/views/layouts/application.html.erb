<!DOCTYPE html>
<html>
<head>
  <title>RailsTodoRedo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="panel-body">
<button><%= link_to "Home", root_path %></button>
<button><%= link_to "New List", new_list_path %></button>
<button><%= link_to "All Lists", lists_path %></button>
<button><%= link_to "All Items", all_items_path %></button>

<% if current_user %>
  <span><%= current_user.email %></span>
  <button><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></button>
<% else %>
  <button><%= link_to "Sign in", new_user_session_path %></button>
<% end %>
</div>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
